  %body#page-top
    / Navigation
    %nav#mainNav.navbar.navbar-expand-lg.bg-secondary.text-uppercase.fixed-top
      .container
        %a.navbar-brand{:href => "#page-top"} Rails 6 Setup
        %button.navbar-toggler.text-uppercase.font-weight-bold.bg-primary.text-white.rounded{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarResponsive", "data-bs-toggle" => "collapse", :type => "button"}
          Menu
          %i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          %ul.navbar-nav.ms-auto
            %li.nav-item.mx-0.mx-lg-1
              %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => "#section1"} Section 1
            %li.nav-item.mx-0.mx-lg-1
              %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => "#section2"} Section 2
            %li.nav-item.mx-0.mx-lg-1
              %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => "#section3"} Section 3
    / Masthead
    %header.masthead.bg-primary.text-center{:style => "color: white"}
      .container.d-flex.align-items-center.flex-column
        / Masthead Avatar Image
        / = inline_svg_tag "avataaars.svg", class: 'img masthead-avatar mb-5'
        .row.justify-content-center
          .col-4
            / %img.img-fluid{:alt => "...", :src => "/assets/me.png"}/
        / Masthead Heading
        %h1.masthead-heading.mb-0.mt-4 Rails 6 Setup
        / Icon Divider
        .divider-custom.divider-light
          .divider-custom-line
          .divider-custom-icon
            %i.fas.fa-star
          .divider-custom-line
        / Masthead Subheading
        %h1.masthead-subheading.font-weight-light.mb-0 Software Engineer
    / Portfolio Section
    %section#section1.page-section.portfolio{:style => "background-color: #1F3662"}
      .container
        / Portfolio Section Heading
        %h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0{:style => "color: white !important"} Section 1
        / Icon Divider
        
    / About Section
    %section#section2.page-section.bg-primary.text-white.mb-0
      .container
        / About Section Heading
        %h2.page-section-heading.text-center.text-uppercase.text-white Section 2
        / Icon Divider
        
    / Contact Section
    %section#section3.page-section{:style => "background-color: #1F3662"}
      .container
        / Contact Section Heading
        %h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0.text-white Section 3
        / Icon Divider
        
    / Copyright Section
    .copyright.py-4.text-center.text-white
      .container
        %small Built by Tommy Joa Wu
